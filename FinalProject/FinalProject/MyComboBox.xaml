<UserControl x:Class="FinalProject.MyComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProject"
             mc:Ignorable="d" Height="200" Width="200">
    <StackPanel x:Name="OptionDisplayArea" Width="200" MinHeight="200" Orientation="Vertical">
        <local:ComboBoxOption ComboBoxOptionTextValue="目標1" x:Name="OptionOpen" MouseDown="OptionOpen_MouseDown"></local:ComboBoxOption>
        <local:ComboBoxOption x:Name="Option1" MouseDown="Option1_MouseDown" Visibility="Hidden" ComboBoxOptionTextValue="存錢"></local:ComboBoxOption>
        <local:ComboBoxOption x:Name="Option2" MouseDown="Option2_MouseDown" Visibility="Hidden" ComboBoxOptionTextValue="減少開支"></local:ComboBoxOption>
    </StackPanel>
</UserControl>
