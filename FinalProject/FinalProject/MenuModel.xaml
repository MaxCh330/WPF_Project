<UserControl x:Class="FinalProject.MenuModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    
        <Border CornerRadius="15" x:Name="TargetMenu" Visibility="Visible">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFF07611" Offset="0.0"></GradientStop>
                    <GradientStop Color="#FFB83333" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
        
        </Border>

</UserControl>
