<UserControl x:Class="FinalProject.MyButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid Width="200" Height="50" x:Name="MyButton1" MouseEnter="MyButton1_MouseEnter" MouseLeave="MyButton1_MouseLeave">
        <Border CornerRadius="10" Name="MyButtonBackground" Width="200" Height="50" Background="Coral"></Border>
        <TextBlock Name="MyButtonText" Foreground="White" TextAlignment="Center" VerticalAlignment="Center" FontSize="35" Margin="0" Text=""></TextBlock>
    </Grid>
</UserControl>
