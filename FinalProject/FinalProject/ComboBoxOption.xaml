<UserControl x:Class="FinalProject.ComboBoxOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid Width="200" Height="50">
        <Border x:Name="ComboBoxOptionArea" MouseEnter="ComboBoxOptionArea_MouseEnter" MouseLeave="ComboBoxOptionArea_MouseLeave" Width="200" Height="50" Background="Coral" CornerRadius="10" BorderThickness="1">
            <TextBlock x:Name="ComboBoxOptionText"
                     Background="Transparent" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" 
                     FontSize="30" Foreground="White" Text="">
                
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
